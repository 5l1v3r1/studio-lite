{
    "compilerOptions": {
        "baseUrl": "",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "skipLibCheck": false,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],

        "mapRoot": "./",
        "module": "es6",
        "moduleResolution": "node",
        "outDir": "../dist/out-tsc",
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "../node_modules/@types"
        ],
        "noStrictGenericChecks": true
    },
    "include": [
        "../src/**/*",

        "../node_modules/ng-validators/src/*.ts",

        "../node_modules/ng-validators/index.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "../src/locale"
    }
}